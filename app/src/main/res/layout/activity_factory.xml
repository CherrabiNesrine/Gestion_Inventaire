<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#f5f5f5"
    android:elevation="4dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:backgroundTint="#f0f0f0"
        android:fillViewport="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#f0f0f0"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layy0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contin"
                android:backgroundTint="#fff"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/svr"
                    android:layout_width="249dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/fourni" />

                <TextView
                    android:id="@+id/opera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Let's Add a new operator !"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/startad"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/contin"
                    android:backgroundTint="@color/required"
                    android:text="Start"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layy1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contin"
                android:backgroundTint="#fff"
                android:elevation="4dp"
                android:orientation="vertical"
                android:outlineProvider="paddedBounds"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="main information"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/in1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/OneNom"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_person_outline_black_24dp"
                        android:drawablePadding="18dp"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:hint=" First Name * "
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/in2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/onePrenom"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_person_outline_black_24dp"
                        android:drawablePadding="18dp"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:hint="Family Name *"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/lil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="16dp"
                            android:gravity="center"
                            android:text="please select the type of your costumer "
                            android:textAlignment="center"
                            android:textColor="#feb552"
                            android:textSize="15sp"
                            android:textStyle="bold"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <RadioGroup
                            android:id="@+id/rgc"
                            android:layout_width="match_parent"
                            android:layout_height="57dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <RadioButton
                                android:id="@+id/indi"
                                android:layout_width="110dp"
                                android:layout_height="52dp"
                                android:layout_marginRight="5dp"
                                android:backgroundTint="#fff"
                                android:elevation="4dp"
                                android:text="individual"
                                />

                            <RadioButton
                                android:id="@+id/asso"
                                android:layout_width="113dp"
                                android:layout_height="52dp"
                                android:layout_gravity="center"
                                android:backgroundTint="#fff"
                                android:elevation="4dp"
                                android:text="Business" />


                        </RadioGroup>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"


                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/oneJob"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_portfolio"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:hint="Job"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"


                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/oneAdress"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_adress"
                        android:drawablePadding="18dp"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:hint=" Provider Address"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bk1"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/contin"
                        android:backgroundTint="#f5f5f5"
                        android:text="Back"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.201"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/nxt1"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/contin"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Next"
                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.815"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layy2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contin"
                android:backgroundTint="#fff"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Contact : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/in3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/OnTlf"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_telephone"
                        android:drawablePadding="18dp"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:hint="Phone Number * "
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/in4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/oneEmail"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_mail"
                        android:drawablePadding="18dp"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:hint="Email * "
                        android:inputType="textWebEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/facebook"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"

                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_facebook"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:hint="Facebook"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/LinkedIn"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_linkedin2"
                        android:drawablePadding="18dp"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:hint="LinkedIn "
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Twitter"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_twit"
                        android:drawablePadding="18dp"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:hint="Twitter"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bk2"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/contin"
                        android:backgroundTint="#f5f5f5"
                        android:text="Back"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.201"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/nxt2"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/contin"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Next"

                        android:textColor="#fff"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.815"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.2" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layy3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contin"
                android:backgroundTint="#fff"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="204dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/company"

                    />

                <TextView
                    android:id="@+id/operaCom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="let's start adding operator company"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="24sp"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/startad2"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/required"
                    android:text="Start"
                    android:textColor="#fff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layy4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contin"
                android:backgroundTint="#fff"
                android:elevation="4dp"
                android:orientation="vertical"
                android:outlineProvider="paddedBounds"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"

                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Factory's Information : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/in5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/entreprise"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:drawableRight="@drawable/ic_building"
                        android:drawablePadding="18dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Company  Name * "
                        android:inputType="textPersonName"


                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/in6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="13"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nif"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_tax"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:hint="tax identification number (NIF) *"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/in7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="14"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/rg"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_building"
                        android:drawablePadding="18dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="trade register * "
                        android:inputType="number"
                        android:lines="2" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <AutoCompleteTextView
                        android:id="@+id/secteur"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_category"
                        android:drawablePadding="18dp"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:hint="Activity Sector"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"

                    app:errorEnabled="true">

                    <AutoCompleteTextView
                        android:id="@+id/taille"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_group"
                        android:drawablePadding="18dp"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:hint="Factory size"

                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:errorEnabled="true">

                    <AutoCompleteTextView
                        android:id="@+id/statusjuridique"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_category"
                        android:drawablePadding="18dp"
                        android:drawableTint="@color/colorPrimary"
                        android:dropDownHeight="match_parent"
                        android:ems="10"
                        android:hint="legal status"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bk3"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/contin"
                        android:backgroundTint="#f5f5f5"
                        android:text="Back"
                        android:textColor="@color/colorPrimary"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.201"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/nxt3"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/contin"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Next"
                        android:textColor="#fff"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.815"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.2" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layy5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/contin"
                android:backgroundTint="#fff"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text=" Company Contact : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/in8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/CompAdrs"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_adress"
                        android:drawablePadding="18dp"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:hint="Company Address"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/in9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/CompTlf"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:drawableRight="@drawable/ic_telephone"
                        android:drawablePadding="18dp"
                        android:drawableTint="@color/colorPrimary"
                        android:ems="10"
                        android:hint=" Company Phone Number * "
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/in10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"

                    app:errorEnabled="true">

