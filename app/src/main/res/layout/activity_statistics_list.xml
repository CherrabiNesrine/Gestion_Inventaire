<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".statisticsList">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Inventory Statistics "
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="vertical">



                <TextView
                    android:id="@+id/CategoryStat"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                   android:drawableLeft="@drawable/ic_pie_chart"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/contin"
                    android:drawableRight="@drawable/ic_chevron_right"
                    android:drawableTint="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="18dp"
                    android:text="Category statistics"
                    android:textColor="#000"
                    android:textSize="18sp"
                 />






                <TextView
                    android:id="@+id/soldsindur"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
android:drawableLeft="@drawable/ic_column"
                    android:drawablePadding="10dp"
                    android:background="@drawable/contin"
                    android:drawableRight="@drawable/ic_chevron_right"

                    android:drawableTint="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="18dp"
                    android:text="Sold in duration "
                    android:textColor="#000"
                    android:textSize="18sp"
                     />





                <TextView
                    android:id="@+id/SOLDVSPUR"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
android:drawableLeft="@drawable/ic_pie_chart"
                    android:drawablePadding="10dp"
                    android:background="@drawable/contin"
                    android:drawableRight="@drawable/ic_chevron_right"
                    android:drawableTint="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="18dp"

                    android:text="Sales vs Purchased"
                    android:textColor="#000"
                    android:textSize="18sp"
                    />




        </LinearLayout>
</LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>