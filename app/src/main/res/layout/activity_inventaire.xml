<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/textListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableRight="@drawable/ic_chevron_right"
                android:drawableTint="@color/colorPrimary"
                android:drawablePadding="18dp"
                android:background="@drawable/contin"
                android:layout_marginTop="130dp"
                android:text="Item List Report"

                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textSTockCOast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableRight="@drawable/ic_chevron_right"
                android:drawableTint="@color/colorPrimary"
                android:drawablePadding="18dp"
                android:background="@drawable/contin"
                android:layout_marginTop="130dp"
                android:text="Stock Coast Report"

                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Profisetpertes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableRight="@drawable/ic_chevron_right"
                android:drawableTint="@color/colorPrimary"
                android:drawablePadding="18dp"
                android:background="@drawable/contin"
                android:layout_marginTop="130dp"
                android:text="profits qnd looses report"
                android:gravity="fill"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/depe"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:drawableRight="@drawable/ic_chevron_right"
                android:drawableTint="@color/colorPrimary"
                android:drawablePadding="18dp"
                android:gravity="fill"
                android:background="@drawable/contin"

                android:text="expenses report"

                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DocRap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableRight="@drawable/ic_chevron_right"
                android:drawableTint="@color/colorPrimary"
                android:drawablePadding="18dp"
                android:background="@drawable/contin"
                android:text="Documents Report"

                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/InvHisRap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableRight="@drawable/ic_chevron_right"
                android:drawableTint="@color/colorPrimary"
                android:drawablePadding="18dp"
                android:background="@drawable/contin"
                android:text="Inventory Movement history report "

                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>