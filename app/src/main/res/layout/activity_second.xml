<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".RegisterActivity"
    >

    <RelativeLayout tools:context="com.example.myapplication12.LoginActivity" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
        >
        <ImageView android:layout_height="206dp" android:layout_width="match_parent" android:background="@mipmap/df" android:id="@+id/textView1"/>

        <TextView android:layout_height="25dp" android:layout_width="wrap_content" android:id="@+id/qst" android:textSize="20dp" android:text="you are :" android:layout_marginBottom="149dp" android:layout_marginTop="200dp" android:layout_marginLeft="57dp" android:layout_marginStart="57dp" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:layout_alignBottom="@+id/prenom"/>

        <EditText
            android:id="@+id/nom"
            android:layout_width="358dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/rr"
            android:elevation="17dp"
            android:hint="Last Name"
            android:paddingLeft="15dp"
            android:textColorHint="#C6C6C6" />

        <EditText android:layout_height="48dp" android:layout_width="358dp" android:background="@drawable/rr" android:id="@+id/prenom" android:layout_marginTop="340dp" android:layout_marginLeft="30dp" android:textColorHint="#C6C6C6" android:paddingLeft="18dp" android:hint="First Name" android:elevation="17dp"/>

        <EditText android:layout_height="48dp" android:layout_width="358dp" android:background="@drawable/rr" android:id="@+id/username" android:layout_marginTop="460dp" android:layout_marginLeft="30dp" android:textColorHint="#C6C6C6" android:paddingLeft="18dp" android:hint="User Name" android:elevation="17dp" android:drawableRight="@drawable/u" android:paddingRight="20dp"/>

        <EditText android:layout_height="48dp" android:layout_width="358dp" android:background="@drawable/rr" android:id="@+id/hhh" android:layout_marginTop="400dp" android:layout_marginLeft="30dp" android:textColorHint="#C6C6C6" android:paddingLeft="18dp" android:hint="Indentifier " android:elevation="17dp" />

        <EditText android:layout_height="48dp" android:layout_width="358dp" android:background="@drawable/rr" android:id="@+id/password" android:layout_marginTop="520dp" android:layout_marginLeft="30dp" android:textColorHint="#C6C6C6" android:paddingLeft="18dp" android:hint="Password " android:elevation="17dp" android:drawableRight="@drawable/lock" android:paddingRight="20dp"/>

        <TextView android:layout_height="wrap_content" android:layout_width="358dp" android:id="@+id/textView" android:textSize="36dp" android:text="REGISTER" android:layout_marginTop="130dp" android:layout_marginLeft="15dp" android:textStyle="bold" android:textColor="#3879e0"/>

        <Button android:layout_height="50dp" android:layout_width="180dp" android:background="@drawable/rounded" android:id="@+id/fb" android:textSize="17sp" android:text="Register Now " android:layout_marginTop="650dp" android:textStyle="bold" android:textColor="#fff" android:layout_centerHorizontal="true"/>

        <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/register_caption" android:textSize="20dp" android:text="Already have an account? Login" android:layout_marginBottom="74dp" android:layout_marginTop="139dp" android:layout_alignBottom="@+id/fb" android:textStyle="bold" android:textColor="#3879e0" android:gravity="center" android:layout_alignTop="@+id/username"/>


        -<RadioGroup android:layout_height="80dp" android:layout_width="162dp" android:id="@+id/grb" android:layout_marginTop="200dp" android:layout_marginLeft="150dp">

        <RadioButton android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/rbg" android:text="gestionnaire"/>

        <RadioButton android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/rbt" android:text="technicien"/>

    </RadioGroup>

    </RelativeLayout>
</ScrollView>


